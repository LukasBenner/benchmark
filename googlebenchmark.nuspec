<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>googlebenchmark</id>
    <version>1.8.1</version>
    <description>
Google Benchmark - A microbenchmark support library.
This is a fork of the official repository.
    </description>
    <authors>Lukas Benner, Google</authors>
    <repository type="git" url="https://github.com/LukasBenner/benchmark.git" branch="nuget" />
    <readme>docs/README.md</readme>
    <license type="file">docs/LICENSE</license>
    <tags>Native, native, c++, benchmark, google</tags>
  </metadata>

  <files>
    <file src="googlebenchmark.props" target="build" />  

    <!-- headers -->
    <file src="include\**\*.h"  target="build/native/include" />

    <!-- libs -->
    <file src="build\src\Release\*.lib"  target="build/native/x64/Release" />
    <file src="build\src\Debug\*.lib"  target="build/native/x64/Debug" />
    
    <file src="docs\*"   target="docs"    />
    <file src="README.md" target="docs/" />
    <file src="LICENSE*" target="docs/" />
  </files>
</package>